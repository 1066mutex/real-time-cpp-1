# ------------------------------------------------------------------------------
# compiler flags for the target architecture
# ------------------------------------------------------------------------------

GCC_VERSION   = 11.2.0
GCC_TARGET    = arm-none-eabi
GCC_PREFIX    = arm-none-eabi

TGT_SUFFIX    = elf

TGT_ALLFLAGS  = -Os                                                            \
                -finline-functions                                             \
                -finline-limit=32                                              \
                -mfloat-abi=hard                                               \
                -mthumb                                                        \
                -march=armv7e-m+fpv5                                           \
                -ffast-math                                                    \
                -mno-unaligned-access                                          \
                -mno-long-calls

TGT_CFLAGS    = -std=c99                                                       \
                -Wunsuffixed-float-constants                                   \
                -Wno-sign-conversion                                           \
                $(TGT_ALLFLAGS)

TGT_CXXFLAGS  = -std=c++14                                                     \
                -Wno-psabi                                                     \
                $(TGT_ALLFLAGS)

TGT_INCLUDES  = -I$(PATH_APP)/util/STL

TGT_AFLAGS    =

TGT_LDFLAGS   = -nostdlib                                      \
                -nostartfiles                                  \
                -Wl,--gc-sections                              \
                -Wl,-Map,$(APP).map                            \
                -T $(LINKER_DEFINITION_FILE)
